<h1>My Tasks </h1>

<%= form_for Task.new, remote: true do |f| %>
	<div class="form-group">
		<%= f.text_field :title, placeholder: "Enter a task" %>
	</div>

	<div class="form-group">
  		<%= f.submit %>
  	</div>
 <% end %>
<ul>

<% @tasks.each do |task| %>
  <li class="task_item" id="<%= task.id %>">
    <%= task.title %><br>
 	<% if task.is_done == false %>
 		<%= link_to "Complete Task", toggle_is_done_path(id: task.id), :method=> :patch, remote: true %>
 	<% else %>
 		Task is Complete
 	<% end %>


    <%= link_to "delete", tasks_path(:task => task.id), format: "js", method: 'delete', remote: true %>
    	<button class="upbutton">Up</button><button class="downbutton">Down</button>
  </li>
<% end %>
</ul>

